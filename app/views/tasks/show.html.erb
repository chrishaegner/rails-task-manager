<h1><%= @task.title %></h1>
<% if @task.completed %>
  <p> <%= @task.details %> </p>
  <i class="far fa-check-square"></i><span> This task is completed </span>
<% else %>
  <p> <%= @task.details %> </p>
  <i class="far fa-square"></i><span> This task is not completed yet </span>
<% end %>
<br>
<%= link_to "Go back to all tasks", tasks_path%>
<%= link_to "Edit task", edit_task_path%>
